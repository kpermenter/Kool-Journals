extends ../layout

block content
  div.subheader
    h2 Latest Kool posts
    a(href="/articles/new", class="btn-new") Create Article &#43;
    a(href="/logout", class="btn-new", style="background-color:red") Log Out &#43;
    
  each article in articles
    article
      h3= article.title
      include by_line
      p= article.shortDescription()
      a(href = "/articles/" + article.id) Read More &rarr;